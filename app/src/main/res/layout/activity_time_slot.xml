<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start"
    tools:context=".TimeSlot">

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFEBEB"
        >


    <Button
        android:id="@+id/timeselect"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_marginTop="70dp"
        android:background="@color/design_default_color_background"
        android:text="Choose a time slot: "
        android:textAllCaps="false"
        android:textColor="#707070"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />



            <RadioButton
                android:id="@+id/btntime1"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginTop="32dp"
                android:background="@drawable/btn_selector"
                android:button="@null"
                android:gravity="center"
                android:onClick="time1"
                android:text="7AM - 8AM"
                android:textAllCaps="true"
                android:textColor="#707070"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="@+id/btntime2"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/btntime2"
                app:layout_constraintTop_toBottomOf="@+id/timeselect" />

            <RadioButton
                android:id="@+id/btntime2"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/btn_selector"
                android:button="@null"
                android:gravity="center"
                android:onClick="time2"
                android:text="8AM - 9AM"
                android:textAllCaps="true"
                android:textColor="#707070"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="@+id/btntime3"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/btntime3"
                app:layout_constraintTop_toBottomOf="@+id/btntime1" />

            <RadioButton
                android:id="@+id/btntime3"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/btn_selector"
                android:button="@null"
                android:gravity="center"
                android:onClick="time3"
                android:text="9AM - 10AM"
                android:textAllCaps="true"
                android:textColor="#707070"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="@+id/btntime4"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/btntime4"
                app:layout_constraintTop_toBottomOf="@+id/btntime2" />

            <RadioButton
                android:id="@+id/btntime4"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/btn_selector"
                android:button="@null"
                android:gravity="center"
                android:onClick="time4"
                android:text="10AM - 11AM"
                android:textAllCaps="true"
                android:textColor="#707070"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="@+id/btntime5"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/btntime5"
                app:layout_constraintTop_toBottomOf="@+id/btntime3" />

            <RadioButton
                android:id="@+id/btntime5"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/btn_selector"
                android:button="@null"
                android:gravity="center"
                android:onClick="time5"
                android:text="11AM - 12PM"
                android:textAllCaps="true"
                android:textColor="#707070"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="@+id/btntime6"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/btntime6"
                app:layout_constraintTop_toBottomOf="@+id/btntime4" />

            <RadioButton
                android:id="@+id/btntime6"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/btn_selector"
                android:button="@null"
                android:gravity="center"
                android:onClick="time6"
                android:text="12PM - 1PM"
                android:textAllCaps="true"
                android:textColor="#707070"
                android:textSize="20sp"
                app:layout_constraintEnd_toStartOf="@+id/btntime12"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btntime5" />


            <RadioButton
                android:id="@+id/btntime7"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginTop="32dp"
                android:background="@drawable/btn_selector"
                android:button="@null"
                android:gravity="center"
                android:onClick="time7"
                android:text="1PM - 2PM"
                android:textAllCaps="true"
                android:textColor="#707070"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="@+id/btntime8"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/btntime8"
                app:layout_constraintTop_toBottomOf="@+id/timeselect" />

            <RadioButton
                android:id="@+id/btntime8"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/btn_selector"
                android:button="@null"
                android:gravity="center"
                android:onClick="time8"
                android:text="2PM - 3PM"
                android:textAllCaps="true"
                android:textColor="#707070"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="@+id/btntime9"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/btntime9"
                app:layout_constraintTop_toBottomOf="@+id/btntime7" />

            <RadioButton
                android:id="@+id/btntime9"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/btn_selector"
                android:button="@null"
                android:gravity="center"
                android:onClick="time9"
                android:text="3PM - 3PM"
                android:textAllCaps="true"
                android:textColor="#707070"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="@+id/btntime10"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/btntime10"
                app:layout_constraintTop_toBottomOf="@+id/btntime8" />

            <RadioButton
                android:id="@+id/btntime10"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/btn_selector"
                android:button="@null"
                android:gravity="center"
                android:onClick="time10"
                android:text="4PM - 5PM"
                android:textAllCaps="true"
                android:textColor="#707070"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="@+id/btntime11"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/btntime11"
                app:layout_constraintTop_toBottomOf="@+id/btntime9" />

            <RadioButton
                android:id="@+id/btntime11"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/btn_selector"
                android:button="@null"
                android:gravity="center"
                android:onClick="time11"
                android:text="5PM - 6PM"
                android:textAllCaps="true"
                android:textColor="#707070"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="@+id/btntime12"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/btntime12"
                app:layout_constraintTop_toBottomOf="@+id/btntime10" />

            <RadioButton
                android:id="@+id/btntime12"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/btn_selector"
                android:button="@null"
                android:gravity="center"
                android:onClick="time12"
                android:text="6PM - 7PM"
                android:textAllCaps="true"
                android:textColor="#707070"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/btntime6"
                app:layout_constraintTop_toBottomOf="@+id/btntime11" />


        <Button
        android:id="@+id/btntback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/btn_background"
        android:text="Back"
        android:textColor="#707070"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btntnext"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btntnext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/btn_background"
        android:text="Next"
        android:textColor="#707070"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btntback" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:fadeScrollbars="false"
        android:maxWidth="1dp"
        android:theme="?attr/actionBarTheme"
        app:buttonGravity="top|center_vertical"
        app:contentInsetStartWithNavigation="20dp"
        app:layout_constrainedHeight="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:maxButtonHeight="8dp"
        app:navigationContentDescription="" />

    <ImageView
        android:id="@+id/menu"
        android:layout_width="30dp"
        android:layout_height="35dp"
        android:layout_marginStart="13dp"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar"
        app:layout_constraintStart_toStartOf="@+id/toolbar"
        app:layout_constraintTop_toTopOf="@+id/toolbar"
        app:srcCompat="@drawable/menu" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="RESERVE PARKING"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar"
        app:layout_constraintStart_toEndOf="@+id/menu"
        app:layout_constraintTop_toTopOf="@+id/toolbar" />

        <ImageView
            android:id="@+id/setting"
            android:layout_width="36dp"
            android:layout_height="38dp"
            android:layout_marginEnd="32dp"
            android:onClick="setting"
            app:layout_constraintBottom_toBottomOf="@+id/toolbar"
            app:layout_constraintEnd_toEndOf="@+id/toolbar"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_settings_black_24dp"
            tools:ignore="VectorDrawableCompat" />
</androidx.constraintlayout.widget.ConstraintLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:background="#FFEBEB"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/drawer_menu" />
</androidx.drawerlayout.widget.DrawerLayout>